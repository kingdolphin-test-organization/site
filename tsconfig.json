{
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": false,
    "lib": ["es2019", "dom"],
    "jsx": "react",
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es5",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noErrorTruncation": true,
    "allowJs": true,
    "typeRoots" : [
        "node_modules/@types"
    ],
    "baseUrl": ".",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "strict": false,
    "isolatedModules": true,
    "paths": {
        "Vector": ["lib/core/src/utils/math/Vector"],
        "math/*": ["lib/core/src/utils/math/*"],
        "core/*": ["lib/core/src/*"],
        "shared/*": ["src/*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}


